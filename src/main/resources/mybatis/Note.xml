<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.stellarmemo.dao.NoteDao">

    <insert id="createNote">
        insert into note(user_id,content,note_id,state)
        values (#{user_id},#{content},#{note_id},#{state})
    </insert>

    <update id="modifyNote" >
        update note set
        content=#{content}
        where note_id=#{note_id}
    </update>


    <delete id="deleteNote" >
        delete from note where note_id=#{note_id}
    </delete>

    <select id="searchAllNote" resultType="Note">
        select * from note;
    </select>

    <select id="countNote" resultType="java.lang.Integer">
        select count(*) from note;
    </select>

    <select id="searchNoteByPage" resultType="Note">
        select * from note
        limit #{pagesize},#{offset};
    </select>
</mapper>
